<h1>TravelTwitter</h1>
<h3>新規投稿</h3>
<%= form_for @tweet do |f| %>

  

  <div class="field">
    <%= f.label :spot %>
    <%= f.text_field :spot, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :score %>
    <%= f.number_field :score, :size => 10 %>
  </div>
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, :size => 140 %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, size: "50x1" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>



<%= link_to "投稿一覧に戻る", tweets_path %>